{
  "$schema" : "http://json-schema.org/draft-04/schema#",
  "title" : "rpl::rasm",
  "description" : "This is the schema for a basic task space rpl assembly command",
  "type" : "object",
  "properties" : {
    "command" : { "type" : "string" },
    "params"  : {
      "type" : "object",
      "properties" : {
        "frame" : {
          "type" : "object",
          "properties" : {
            "rb" : { "type" : "string" },
            "ori-rb" : { "type" : "string" },
            "R" : {
              "type" : "array",
              "items" : { "type" : "number" },
              "minItems" : 9,
              "maxItems" : 9,
            },
            "p" : {
              "type" : "array",
              "items" : { "type" : "number" },
              "minItems" : 3,
              "maxItems" : 3,
            }
          },
          "required" : ["rb"]
        }
      },
      "required" : ["frame"]
    },
    "type"    : { "type" : "string" },
    "meta"    : {
      "description" : "A short text description of the task space rpl robot assembly command",
      "type" : "string"
    }
  },
  "required" : ["command", "type", "params"]
}
